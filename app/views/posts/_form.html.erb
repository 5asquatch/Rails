<% post.persisted? %>
<%= form_with model: post do |f| %>
<div class="form-group">
    <label class="col-sm-4 col-form-label">Add Photo:
    </label>
    <div class="col-sm-8"><%= f.file_field :photo, class: "form-control" %></div>
</div>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    </div>
    <%= f.submit %>
<% end %>